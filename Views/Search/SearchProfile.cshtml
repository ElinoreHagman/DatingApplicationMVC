@model List<MVC_Dating_Project.Models.Profile>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Content/ProfileLook.css")

}

@{
    ViewBag.Title = "Search Results";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>

    <div>
        <h2>Search Results</h2>

        <div id="list">
            @if (Model.Count == 0)
            {
                <p>No Profiles Found</p>
            }
            else
            {
                foreach (var profile in Model)
                {
                    <div id="object">

                        <div class="object-item">
                            <img src="@Url.Content(profile.ImagePath)" width="70" />
                        </div>

                        <div class="object-item">
                        @Html.ActionLink(@profile.FirstName + " " + @profile.LastName, "Index", "VisitPage", new { profileId = profile.ProfileId }, null)
                        </div>
                    </div>
                }
            }
        </div>
    </div>

</body>
</html>