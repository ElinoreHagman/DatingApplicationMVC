<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Uni Dating</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/searchFunction.css")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div id="unidating">@Html.ActionLink("Univeristy Dating", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</div>

                <div id="searchform">
                    @if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("SearchProfile", "Search", FormMethod.Post))
                        {
                                
                             <p><input type = "text" name="SearchText" id="SearchText" placeholder = "First or Last name.." onfocus = "this.placeholder=''" onblur="this.plceholder='First or last name..'"/> 
                                <input type="submit" value="Search" class="search-button" /></p>
                        }
                    }
                </div>

            </div>

            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - University Dating</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
